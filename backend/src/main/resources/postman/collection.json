{
  "info": {
    "name": "RBAC Dashboard API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api/v1"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "description": "Authentication endpoints",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/signup",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password@123\",\n  \"fullName\": \"Demo User\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@demo.io\",\n  \"password\": \"Super@123\"\n}"
            }
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/refresh",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/logout",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            }
          }
        },
        {
          "name": "Current User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users"
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/users",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@demo.io\",\n  \"password\": \"Password@123\",\n  \"fullName\": \"New User\",\n  \"roleIds\": []\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Roles",
      "item": [
        {
          "name": "List Roles",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/roles"
          }
        },
        {
          "name": "Create Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/roles",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"key\": \"SALES\",\n  \"name\": \"Sales Manager\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Permissions",
      "item": [
        {
          "name": "List Permissions",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/permissions"
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "List Customers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/customers"
          }
        },
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/customers",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Beta Corp\",\n  \"email\": \"info@beta.io\",\n  \"phone\": \"+1-555-0103\",\n  \"address\": \"100 Beta Street\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "List Invoices",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/invoices"
          }
        },
        {
          "name": "Create Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/invoices",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": 1,\n  \"number\": \"INV-2001\",\n  \"issueDate\": \"2024-03-01\",\n  \"dueDate\": \"2024-03-15\",\n  \"status\": \"DRAFT\",\n  \"taxRate\": 10,\n  \"items\": [\n    {\n      \"description\": \"Consulting\",\n      \"qty\": 5,\n      \"unitPrice\": 200\n    }\n  ]\n}"
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "if (pm.collectionVariables.get('accessToken')) {",
          "    pm.request.headers.upsert({ key: 'Authorization', value: 'Bearer ' + pm.collectionVariables.get('accessToken') });",
          "}"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "if (pm.response.code === 200 && pm.response.json().accessToken) {",
          "    const jsonData = pm.response.json();",
          "    pm.collectionVariables.set('accessToken', jsonData.accessToken);",
          "    if (jsonData.refreshToken) { pm.collectionVariables.set('refreshToken', jsonData.refreshToken); }",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}
